<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation"
    app:startDestination="@id/weatherFragment">

    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.wednesday.template.fragment.WeatherFragment"
        android:label="WeatherData" >
        <action
            android:id="@+id/action_weatherFragment_to_citiesFragment"
            app:destination="@id/citiesFragment" />
    </fragment>
    <fragment
        android:id="@+id/citiesFragment"
        android:name="com.wednesday.template.fragment.CitiesFragment"
        >
        <action
            android:id="@+id/action_citiesFragment_to_weatherFragment"
            app:destination="@id/weatherFragment" />
    </fragment>
</navigation>